{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "types": ["node"],
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "pretty": true,
    "lib": [
      "es7",
      "es2017"
    ],
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
